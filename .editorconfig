# Editor configuration, see http://editorconfig.org
root = true

[*]
max_line_length = 100
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
quote_type = single

[*.md]
max_line_length = off
indent_size = 4
trim_trailing_whitespace = false
